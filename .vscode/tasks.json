{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Ouch Browser",
			"type": "shell",
			"problemMatcher": "$rustc",
			"command": "just run"
		},
		{
			"label": "Build Ouch Browser",
			"type": "shell",
			"problemMatcher": "$rustc",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"command": "just build"
		},


		{
			"label": "Check dependencies",
			"type": "shell",
			"hide": true,
			"presentation": {
				"reveal": "silent",
				"close": true
			},
			"problemMatcher": "$rustc",
			"runOptions": {
				"runOn": "folderOpen"
			},
			"command": "just check"
		},
	]
}